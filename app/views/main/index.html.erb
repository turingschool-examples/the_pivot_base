<div class="container">
  <div class="title">
    <center>
      <%= link_to (image_tag('save_20_hero.png', class: "hero")), new_user_path %>
    </center>
  </div>
  <%= form_tag('/live-search', method: 'get', class: 'live-search-form') do %>
    <%= text_field_tag 'live-search', '', placeholder: 'search items', data: { 'js-search' => true } %>
    <%= submit_tag 'search', class: "btn-sm btn-primary"%>
  <% end %>
  <h3>Popular Items:</h3>
  <div class="row">
    <% @popular_items.each do |item| %>
      <div class="center-block">
        <div class="card border-white" style="width: 15rem;">
          <%= image_tag item.image, class: "card-img-top" %>
          <div class="card-body">
            <center><p><strong><%= link_to item.title, item_path(item) %></strong></p>
              <p>Price: $<%= item.price %></p>
              <% unless item.retired? %>
                <%= link_to "Add to cart", cart_path(item_id: item.id), method: :post, class: "badge badge-primary" %></center>
            <%= admin_edit_tag(store: item.store, item: item, class: "btn btn-primary") %>
          <% else %>
            <div class="badge badge-secondary">
              Retired
            </div>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
