<%= form_tag(controller: :orders, action: :create) do %>

  <% unless current_user.last_cards.empty? %>
    <%= label_tag "Select from previous card, ending in:" %>
    <%= select_tag :previous_card, options_for_select([nil] + current_user.last_cards) %>
  <% end %>

  <%= label_tag "Credit Card Number" %>
  <%= text_field_tag :number %>

  <%= label_tag "Expiration Date" %>
  <%= text_field_tag :expiration_date %>

  <%= label_tag "CVC" %>
  <%= text_field_tag :cvc%>

  <%= hidden_field_tag :amount, order.total_price %>
  <%= hidden_field_tag :currency, "usd" %>

  <%= submit_tag "Place Order", id: "complete_order" %>
<% end %>
