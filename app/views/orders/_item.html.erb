<tr id="item-<%= item.id %>">
  <th scope="row"><%= image_tag item.image, class: "card-img-top item-image" %></th>
  <td class="title"><%= link_to item.title, item_path(item) %></td>
  <td class="quantity"><%= @order.item_quantity(item) %></td>
  <td class="price"><%= number_to_currency(item.price) %></td>
</tr>
