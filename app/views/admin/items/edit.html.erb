<h1>Edit Item</h1>


<%= form_for([@store, @item], url: admin_store_item_path) do |form|%>
  <div class="field">
    <%= form.label :title %> <br />
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %> <br />
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :price %> <br />
    <%= form.text_field :price %>
  </div>

  <div class="field">
		<%= form.label :image %> <br />
    <%= form.file_field :image %>
  </div>

  <div class="category_select_box">
    <%= form.select(:category_id, @categories.map { |category| [category.title, category.id] }) %>
  </div>

  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>

<%= link_to 'Back', admin_store_items_path(@store.url) %>
