      <!-- </nav> -->

    </div>
  </div>
</div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><i>Customer<i></th>
                <th><center><i>Total Orders To-Date<i></center></th>
                </tr>
          </thead>

        <tbody>
          <% @analytics.orders_per_customer.each do |key, value| %>
          <tr>
            <th scope="row"><%= key %></th>
            <td><center><%= value %></center></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <table class="table table-hover">
          <thead>
          <tr>
            <th><i>Customer<i></th>
            <th><center><i>Items Ordered To-Date<i></center></th>
          </tr>
          </thead>
      </div>
    </div>
  </div>

        <tbody>
          <% @analytics.items_ordered_per_customer.each do |key, value| %>
          <tr>
            <th scope="row"><%= key %></th>
            <td><center><%= value %></center></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <p>
      Total shop sales to date: <%= number_to_currency(@analytics.total_sales) %>. <br>
      Total completed orders: <%= @analytics.completed_orders %> <br>
      Average number of onsies per order: <%= @analytics.average_quantity_purchased %>
    </p>

    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-hover">
        <thead>
          <tr>
            <th><i>Item<i></th>
            <th><center><i>Quantity Sold To-Date<i></center></th>
          </tr>
        </thead>

        <tbody>
          <% @analytics.sales_by_item_title.each do |key, value| %>
          <tr>
            <th scope="row"><%= key %></th>
            <td><center><%= value %></center></td>
          </tr>
          <% end %>
        </tbody>

          </table>
        </div>
      </div>
    </div>


</div>
